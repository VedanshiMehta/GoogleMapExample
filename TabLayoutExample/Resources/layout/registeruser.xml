<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scrollViewRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout 
    android:padding="30dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textViewWelcomeRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="40sp"
        android:textColor="#2e8b57"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageViewRegisterGlide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"/>

     <ImageView
        android:id="@+id/imageViewRegisterGlide"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewWelcomeRegister"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayoutEmailRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
  
       <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="35dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                 app:errorIconDrawable="@null"
                app:boxCornerRadiusTopStart="10dp"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintVertical_bias="0.0"
                android:id="@+id/textInputLayoutEmailRegister"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewRegisterGlide"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayoutPasswordRegister"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/textInputEditTextEmailRegister"
                    android:maxLength="150"
                    android:inputType="text"
                    android:hint="Enter your email-id"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>
           <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="35dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                 app:errorIconDrawable="@null"
                 app:passwordToggleEnabled="true"
                android:id="@+id/textInputLayoutPasswordRegister"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutEmailRegister"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayoutPasswordConfirmRegister"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/textInputEditTextPasswordRegister"
                    android:maxLength="150"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:hint="Enter your password"
                    android:singleLine="true"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="35dp"
                app:boxCornerRadiusBottomEnd="10dp"
                 app:errorIconDrawable="@null"
                 app:passwordToggleEnabled="true"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                android:id="@+id/textInputLayoutPasswordConfirmRegister"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPasswordRegister"
                app:layout_constraintBottom_toTopOf="@+id/textInputLayoutMobileNumberRegister"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/textInputEditTextConfirmPasswordRegister"
                    android:maxLength="150"
                    android:inputType="textPassword"
                    android:imeOptions="actionNext"
                    android:hint="Re-enter your password"
                    android:singleLine="true"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="35dp"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:prefixText ="+91"
                 app:errorIconDrawable="@null"
                android:id="@+id/textInputLayoutMobileNumberRegister"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPasswordConfirmRegister"
                app:layout_constraintBottom_toTopOf="@+id/materialButtonRegister"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:id="@+id/textInputEditTextMobileNumberRegister"
                    android:maxLength="10"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:digits="1234567890"
                    android:hint="Enter your mobilenumber"
                    android:singleLine="true"
                    android:layout_height="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButtonRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="20dp"
                android:text="Register"
                android:textColor="#ffffff"
                android:padding="15dp"
                android:backgroundTint="#2e8b57"
                android:layout_marginTop="35dp"
                android:textAllCaps="false"
                android:textSize="19sp"
                app:layout_constraintTop_toBottomOf="@+id/textInputLayoutMobileNumberRegister"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="30dp"/>
            
        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
