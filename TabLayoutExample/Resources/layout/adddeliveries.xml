<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAddPackage"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#2e8b57"
        app:titleTextColor="#ffffff"
         app:theme="@style/ToolbarColoredBackArrow"
         app:popupTheme="@style/AppTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewAddPackage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"/>
   <ScrollView
        android:id="@+id/scrollViewAddPackage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/toolbarAddPackage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
 <androidx.constraintlayout.widget.ConstraintLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextPackage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonSave"
        app:layout_constraintVertical_bias="0.1"
        android:backgroundTint="#2e8b57"
        android:textColor="#000000"
        android:hint="Package Name"
        android:textColorHint="#000000"
        android:textAlignment="center"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:imeOptions="actionNext"
        app:layout_constraintVertical_chainStyle="packed"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="#2e8b57"
        android:padding="15dp"
        android:layout_marginTop="10dp"
        android:text="Save"
        app:cornerRadius="10dp"
        android:textColor="#ffffff"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/editTextPackage"
        app:layout_constraintBottom_toTopOf="@+id/textViewPackageOrigin"/>
    <TextView
        android:text="Locate Package Origin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPackageOrigin"
        android:layout_marginTop="10dp"
         android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/buttonSave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mapFragment"/>

    <fragment
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:ignore="MissingAndroidNamespace"
        android:id="@+id/mapFragment"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPackageOrigin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textViewPackageDestionation"/>
      <TextView
        android:text="Locate Package Destination"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPackageDestionation"
        android:layout_marginTop="10dp"
         android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/mapFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/mapFragmentDestination"/>

    <fragment
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        tools:ignore="MissingAndroidNamespace"
        android:id="@+id/mapFragmentDestination"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPackageDestionation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
     </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
