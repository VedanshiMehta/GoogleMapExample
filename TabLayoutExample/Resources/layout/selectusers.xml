<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/textViewWelcomeHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="40sp"
        android:layout_marginTop="30dp"
        android:textColor="#2e8b57"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textViewLoginHere"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_chainStyle="packed"/>
        
  
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/textViewAreYouRegistered"
            android:text="Are you already Registered ?"
            app:layout_constraintTop_toBottomOf="@+id/textViewWelcomeHere"
            app:layout_constraintBottom_toTopOf="@+id/imageViewGlide"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewLogIn"
            android:textSize="16sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintHorizontal_chainStyle="packed"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewLogIn"
            android:text="Login Here"
             android:textColor="#2e8b57"
            app:layout_constraintTop_toTopOf="@+id/textViewAreYouRegistered"
            app:layout_constraintBottom_toBottomOf="@+id/textViewAreYouRegistered"
            app:layout_constraintStart_toEndOf="@+id/textViewAreYouRegistered"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="18sp"
            android:layout_marginLeft="5dp"/>
       
    <ImageView
        android:id="@+id/imageViewGlide"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewAreYouRegistered"
        app:layout_constraintBottom_toTopOf="@+id/textViewRegisterHere"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewRegisterHere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register yorself here"
        android:textSize="16sp"
        android:textColor="#708090"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGlide"
        app:layout_constraintBottom_toTopOf="@+id/materialCardViewInducers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardViewInducers"
            android:layout_width="0.0dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
             app:strokeColor="#2e8b57"
            app:strokeWidth="2dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toStartOf="@+id/materialCardViewDeliveryPerson"
            app:layout_constraintTop_toBottomOf="@+id/textViewRegisterHere"
            app:layout_constraintBottom_toTopOf="@+id/materialButtonNext">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutInducers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f8f8ff"
                android:padding="15dp">
                <ImageView
                    android:id="@+id/imageViewInducers"
                     android:layout_width="wrap_content"
                     android:layout_height="150dp"
                    android:src="@drawable/inducers"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/textViewInducers"/>
                <TextView
                    android:id="@+id/textViewInducers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewInducers"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Inducers"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2e8b57"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

         <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardViewDeliveryPerson"
            android:layout_width="0.0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintStart_toEndOf="@+id/materialCardViewInducers"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="#2e8b57"
            app:strokeWidth="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/materialCardViewInducers"
            app:layout_constraintTop_toTopOf="@+id/materialCardViewInducers">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayoutDeliveryPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#f8f8ff"
                android:padding="15dp">
                <ImageView
                    android:id="@+id/imageViewDeliveryPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:src="@drawable/courier"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/textViewDeliveryPerson"/>
                <TextView
                    android:id="@+id/textViewDeliveryPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/imageViewDeliveryPerson"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Delivery Person"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2e8b57"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButtonNext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="20dp"
                android:text="Next"
                android:padding="15dp"
                android:backgroundTint="#2e8b57"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:textSize="19sp"
                android:enabled="false"
                app:layout_constraintTop_toBottomOf="@+id/materialCardViewInducers"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
